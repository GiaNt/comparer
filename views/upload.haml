%form{:action => '/upload', :method => 'POST', :enctype => 'multipart/form-data'}
  %p
    %label{:for => 'tags'} Tags
    %input{:type => 'text', :name => 'tags', :placeholder => 'Tag 1, Tag 2', :id => 'tags'}
    %small.hint Deze tags zullen worden toegepast op alle hieronder geselecteerde bestanden.
  %p
    %label{:for => 'pictures'} Bestand(en)
    %input{:type => 'file', :name => 'picture', :id => 'pictures'}
  %p
    %input{:type => 'submit', :value => 'Uploaden'}
